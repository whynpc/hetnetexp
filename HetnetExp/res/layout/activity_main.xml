<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="11" >

            <TextView
                android:id="@+id/textView1"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="0"
                android:text="Mobile Data"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/button1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:onClick="onClickMobileDataOn"
                android:text="On" />

            <Button
                android:id="@+id/button2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:onClick="onClickMobileDataOff"
                android:text="Off" />

            <TextView
                android:id="@+id/textView2"
                android:layout_gravity="left|center_vertical"
                android:text="WiFi"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/button4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:onClick="onClickWifiOn"
                android:text="On" />

            <Button
                android:id="@+id/button5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_column="2"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:onClick="onClickWifiOff"
                android:text="Off" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="Ping Pong"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/button10"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:onClick="onClickPingpongStart"
                android:text="Start" />

            <Button
                android:id="@+id/button11"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:onClick="onClickPingpongStop"
                android:text="Stop" />
            
            <TextView
                android:id="@+id/textView3"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="3"
                android:text="UDP"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            

            <Button
                android:id="@+id/button8"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="3"
                android:text="Start"
                android:onClick="onClickUdpStart" />
            
            <Button
                android:id="@+id/button7"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_column="2"
                android:layout_gravity="left|top"
                android:layout_row="3"
                android:text="Stop"
                android:onClick="onClickUdpStop" />
            
            <TextView
                android:id="@+id/textView4"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="4"
                android:text="Trace"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/button9"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_column="2"
                android:layout_gravity="left|top"
                android:layout_row="4"
                android:text="Start"
                android:onClick="onClickTraceStart" />

            <Button
                android:id="@+id/button6"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="4"
                android:text="Stop"
                android:onClick="onClickTraceStop" />
            

            <TextView
                android:id="@+id/textView6"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="5"
                android:text="Traffic Inc (KB)"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/editTextTraffic"
                android:layout_width="75dp"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="5"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/button3"
                style="?android:attr/buttonStyleSmall"
                android:layout_column="2"
                android:layout_width="80dp"
                android:layout_gravity="left|top"
                android:layout_row="5"
                android:text="Refresh"
                android:onClick="onClickRefreshTraffic" />

        </GridLayout>

        <EditText
            android:id="@+id/msgbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="5" >

            <requestFocus />
        </EditText>

    </LinearLayout>

</RelativeLayout>
